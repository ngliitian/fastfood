{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Top 10 Fast Food Retail Chains",
  "width": 800,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/ngliitian/fastfood/refs/heads/main/top.csv"
  },
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "total",
      "type": "quantitative",
      "title": "Number of Locations",
      "axis": {"grid": false}
    },
    "y": {
      "field": "retails",
      "type": "nominal",
      "sort": "-x",
      "title": "retails"
    },
    "tooltip": [
      {"field": "retails", "type": "nominal", "title": "Fast Food Chain"},
      {"field": "total", "type": "quantitative", "title": "Number of Locations"}
    ]
  },
  "config": {}
}