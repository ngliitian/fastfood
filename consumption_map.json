{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Fast Food Consumption per State from 2020 to 2022",
  "width": 850,
  "height": "400",
  "projection": {"type": "equirectangular"},
  "data": {
    "url": "https://raw.githubusercontent.com/ngliitian/fastfood/refs/heads/main/consumption_per_capita.csv",
    "format": {"type": "csv"}
  },
  "params": [
    {
      "name": "year_selection",
      "value": 2022,
      "bind": {
        "input": "range",
        "min": 2020,
        "max": 2022,
        "step": 1,
        "name": "Select Year"
      }
    }
  ],
  "transform": [
    {
      "lookup": "state",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/ngliitian/fastfood/refs/heads/main/STE_2021_AUST_GDA2020.json",
          "format": {"type": "topojson", "feature": "STE_2021_AUST_GDA2020"}
        },
        "key": "properties.STE_NAME21"
      },
      "as": "geo"
    },
    {"filter": "datum.year == year_selection"},
    {
      "window": [{"op": "max", "field": "total", "as": "max_consumption_rate"}],
      "frame": [null, null]
    },
    {
      "window": [{"op": "min", "field": "total", "as": "min_consumption_rate"}],
      "frame": [null, null]
    },
    {
      "calculate": "datum.total == datum.max_consumption_rate ? 'The state with the highest fast food consumption rate is ' + datum.state + ' with ' + datum.total + '%.' : 'The state with the lowest fast food consumption rate is ' + datum.state + ' with ' + datum.total + '%.'",
      "as": "consumption_rate_text"
    }
  ],
  "layer": [
    {
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "shape": {"field": "geo", "type": "geojson"},
        "color": {
          "field": "obesity_rate",
          "type": "quantitative",
          "title": "Obesity Rate (%)",
          "scale": {"range": ["#FFD7B5", "#D62828"]}
        },
        "tooltip": [
          {"field": "state", "type": "nominal", "title": "State"},
          {
            "field": "total",
            "type": "quantitative",
            "title": "Consumption Rate (%)"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "fontSize": 14,
        "fontWeight": "bold",
        "color": "black",
        "align": "center"
      },
      "transform": [{"filter": "datum.total == datum.max_consumption_rate"}],
      "encoding": {
        "text": {"field": "consumption_rate_text"},
        "x": {"value": 400},
        "y": {"value": 410}
      }
    },
    {
      "mark": {
        "type": "text",
        "fontSize": 14,
        "fontWeight": "bold",
        "color": "black",
        "align": "center"
      },
      "transform": [{"filter": "datum.total == datum.min_consumption_rate"}],
      "encoding": {
        "text": {"field": "consumption_rate_text"},
        "x": {"value": 300},
        "y": {"value": 350}
      }
    }
  ],
  "config": {"view": {"stroke": null}}
}